{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run clean && cross-env DEBUG=app:* NODE_ENV=development babel-watch server/index.js",
    "start:prod": "npm run build && npm run serve",
    "serve": "cross-env NODE_ENV=production node build_server/index.js",
    "build": "npm run build:client && npm run build:server && npm run build:node",
    "build:client": "rimraf build_client && cross-env NODE_ENV=production webpack --progress -p --config webpack/client.js",
    "build:server": "rimraf build_server && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.js",
    "build:node": "cross-env NODE_ENV=production babel server -d build_server --ignore store,render",
    "clean": "rimraf build_client build_server",
    "precommit": "git diff --cached --name-only | grep -e '\\.js$' | xargs eslint",
    "lint": "eslint src server webpack",
    "lint:fix": "eslint --fix src server webpack",
    "format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:madurmanov/react-boilerplate.git"
  },
  "author": "Mikhail Durmanov",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "fetch-everywhere": "^1.0.5",
    "file-loader": "^1.1.6",
    "history": "^4.7.2",
    "image-webpack-loader": "^4.0.0",
    "lodash": "^4.17.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "react-universal-component": "^2.8.2",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-first-router": "^1.9.19",
    "redux-first-router-link": "^1.4.2",
    "reselect": "^3.0.1",
    "transition-group": "^0.0.2",
    "webpack-flush-chunks": "^1.1.22"
  },
  "devDependencies": {
    "autodll-webpack-plugin": "^0.3.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-preset-madurmanov": "github:madurmanov/babel-preset",
    "babel-watch": "^2.0.6",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "eslint": "^4.17.0",
    "eslint-config-madurmanov": "github:madurmanov/eslint-config",
    "extract-css-chunks-webpack-plugin": "^2.0.15",
    "husky": "^0.14.3",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.2",
    "stats-webpack-plugin": "^0.6.1",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "2.21.0",
    "webpack-hot-server-middleware": "^0.1.0",
    "write-file-webpack-plugin": "^4.1.0"
  },
  "babel": {
    "presets": "madurmanov"
  },
  "eslintConfig": {
    "extends": "madurmanov"
  }
}
